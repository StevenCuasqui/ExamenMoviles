<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearMedicamenteActivity">

    <TextView
            android:text="Nombre:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"/>
    <TextView
            android:text="Gramos a Ingerir:"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView16" app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintEnd_toEndOf="@+id/textView15" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintHorizontal_bias="0.452"/>
    <TextView
            android:text="Composicion:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" app:layout_constraintStart_toStartOf="@+id/textView16"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16" app:layout_constraintEnd_toEndOf="@+id/textView16"
            app:layout_constraintHorizontal_bias="0.409"/>
    <TextView
            android:text="Usado para:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="@+id/textView17"/>
    <TextView
            android:text="Caducidad:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintEnd_toEndOf="@+id/textView18" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Numero de Pastillas:"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/textView20" app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintEnd_toEndOf="@+id/textView19" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintHorizontal_bias="0.448"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/texto_nombreMed"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView15"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.714"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/texto_caducidadMed"
            app:layout_constraintStart_toStartOf="@+id/texto_usoMed"
            app:layout_constraintEnd_toEndOf="@+id/texto_usoMed"
            app:layout_constraintTop_toBottomOf="@+id/texto_usoMed"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/texto_compoMed" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/texto_gramosMed"
            app:layout_constraintStart_toStartOf="@+id/texto_gramosMed" app:layout_constraintEnd_toEndOf="@+id/texto_gramosMed"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/texto_usoMed"
            app:layout_constraintStart_toStartOf="@+id/texto_compoMed" app:layout_constraintEnd_toEndOf="@+id/texto_compoMed"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/texto_compoMed"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/texto_gramosMed"
            app:layout_constraintStart_toStartOf="@+id/texto_nombreMed" app:layout_constraintEnd_toEndOf="@+id/texto_nombreMed"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/texto_nombreMed"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/texto_pastillasMed"
            app:layout_constraintStart_toStartOf="@+id/texto_caducidadMed"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/texto_caducidadMed"
            app:layout_constraintEnd_toEndOf="@+id/texto_caducidadMed" app:layout_constraintHorizontal_bias="0.937"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancelarMed" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_guardarMed" android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.402"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_guardarMed" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>