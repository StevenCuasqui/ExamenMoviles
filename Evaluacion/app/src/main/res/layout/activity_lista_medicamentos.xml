<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListaMedicamentosActivity">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/medicamento_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="395dp"
            android:scrollbars="vertical" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ListView
            android:id="@+id/list2_view_context_menu"
            android:layout_width="match_parent"
            android:layout_height="408dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/medicamento_recyclerView"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="368dp"
            android:layout_height="92dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <TextView
                android:text="TextView"
                android:layout_width="73dp"
                android:layout_height="40dp"
                android:id="@+id/textView14" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"/>
        <Button
                android:text="Button"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:id="@+id/button_CrearMedicamento"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/textView14" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>